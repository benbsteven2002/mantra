{% comment %}
  Template Name: Landing Page
  This template is used for creating a custom landing page in Shopify.
{% endcomment %}

<!DOCTYPE html>
<html lang="{{ shop.locale }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ page_title }}</title>
  {% comment %}
    Add any additional meta tags, stylesheets, or scripts here as needed.
  {% endcomment %}
</head>
<body>

  <main>
    <section class="landing-page">
      <div class="container">
        <h1>Welcome to Our Landing Page</h1>
        <p>This is a custom landing page created using Shopify Liquid.</p>
        <a href="/collections/all" class="btn">Shop Now</a>
      </div>
    </section>
  </main>

  {% comment %}
    Add any additional scripts or tracking codes here as needed.
  {% endcomment %}
</body>
</html>
