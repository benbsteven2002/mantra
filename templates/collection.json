{
  "sections": {
    "banner": {
      "type": "main-collection-banner",
      "custom_css": [
        ".collection-hero__text-wrapper {padding-top: 10px; padding-bottom: 0px;}",
        ".collection-hero {padding-top: 0px; padding-bottom: 0px;}",
        ".collection-hero__inner{padding-left: 0px; padding-right: 0px;}",
        "@media (min-width: 750px) {.collection-hero__inner {height: 450px; }}"
      ],
      "settings": {
        "show_collection_description": true,
        "show_collection_image": true,
        "color_scheme": "accent-2"
      }
    },
    "product-grid": {
      "type": "main-collection-product-grid",
      "custom_css": [
        ".card__information {padding-top: 0; padding-bottom: 0;}"
      ],
      "settings": {
        "products_per_page": 20,
        "columns_desktop": 4,
        "image_ratio": "adapt",
        "image_shape": "default",
        "show_secondary_image": true,
        "show_vendor": false,
        "show_rating": false,
        "enable_quick_add": false,
        "enable_filtering": true,
        "filter_type": "horizontal",
        "enable_sorting": true,
        "columns_mobile": "2",
        "padding_top": 8,
        "padding_bottom": 8
      }
    }
  },
  "order": [
    "banner",
    "product-grid"
  ]
}
